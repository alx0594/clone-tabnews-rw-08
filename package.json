    "next": "^15.3.4",
    "next-connect": "^1.0.0",
    "node-pg-migrate": "^7.9.1",
    "pg": "^8.16.3",
    "react": "^19.1.0",
    "react-dom": "^19.1.0"
  },
  "devDependencies": {
    "async-retry": "^1.3.3",
